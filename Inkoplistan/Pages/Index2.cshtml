@page
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Inköpslista</h1>

    @*<a asp-page="/Infoproduct/Index"> Inköpslista </a>*@

    <br />
    <br />

    <p>Du kan välja produkten i <a asp-page ="/Infoproduct/Index"><h2>Inköpslistan</h2></a>.</p>

    <div class="container">


        @foreach (var item in Model.Matvaror)
        {
        <div class="row">
            <div class="col-md-3 border p-2 m-1"> @item.name</div>
            <div class="col-md-1 border p-2 m-1"> @item.antal</div>
            @*<div class="col-md-1 border p-2 m-1"> @item.Inhandlad</div>*@
            @*<div class="col-md-1 border p-2 m-1"> @item.UserId</div>*@


            
            <div class="col-md-3 border p-2 m-1">
                @if (item.Inhandlad == true)
                {
                    <p>@item.name finns</p>
                }
                else
                {<p style="color:red;">@item.name finns inte!</p>}
            </div>

            <div class="col-md-1 border p-2 m-1"> @item.UserId</div>

        </div>
        }


    </div>

</div>


@if (SignInManager.IsSignedIn(User))
{
    <br />
    <br />

    <p>Du är inloggad som @User.Identity.Name </p>
}
else
{
    <p>Du är INTE inloggad!</p>
}

</div>



